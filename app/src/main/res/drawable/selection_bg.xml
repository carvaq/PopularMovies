<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!--From Sunshine project-->

	<!-- State when a row is being pressed, but hasn't yet been currentlySeclected (finger down) -->
	<item android:drawable="@color/translucent"
	      android:state_pressed="true"/>

	<!-- When the view is "currentlySeclected".  In SINGLE_CHOICE_MODE, it flags the active row
		 of a ListView -->
	<item android:drawable="@color/translucent"
	      android:state_activated="true"/>

	<!-- Default, "just hangin' out" state. -->
	<item android:drawable="@android:color/transparent"/>
</selector>